# MCP Server Configuration
# Copy this file to .env and update with your actual values

# Server configuration (for streamable-http transport)
HOST=0.0.0.0
PORT=8000

# Transport configuration
# Options: 'stdio' for local or 'streamable-http' for remote
MCP_TRANSPORT=stdio

# Omelet Routing Engine API configuration
ROUTING_API_BASE_URL=https://routing.oaasis.cc
ROUTING_API_DOCS_URL=https://routing.oaasis.cc/docs/json
ROUTING_API_KEY=your_api_key_here

# iNAVI Maps API configuration
IMAPS_API_BASE_URL=https://dev-imaps.inavi.com
IMAPS_API_DOCS_URL=https://dev-imaps.inavi.com/api-docs

# Development settings
LOG_LEVEL=INFO

# AWS Bedrock configuration (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=
AWS_BEDROCK_MODEL_ID=
